<div class="row">
  <div class="col-6">
    <h1>Facilities</h1>
  </div>
  <div class="col-6">
    <%= link_to "New facility", new_facility_path, class: "btn btn-info" %>
  </div>
</div>

<div id="facilities">
  <% @facilities.each do |facility| %>
    <div class="card">
    <div class="card-body">
    <%= render facility %>
    <p>
      <%= link_to "Show this facility", facility, class: "btn btn-link" %>
    </p>
    </div>
    </div>
  <% end %>
</div>

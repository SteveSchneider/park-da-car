<div class="row">
  <div class="col-6">
    <h1>Vehicles</h1>
  </div>
  <div class="col-6">
    <%= link_to "New vehicle", search_path, class: "btn btn-info" %>
  </div>
</div>

<div id="vehicles">
  <% @vehicles.each do |vehicle| %>
  <div class="card">
  <div class="card-body">
    <%= render vehicle %>
    <p>
      <%= link_to "Show this vehicle", vehicle, class: "btn btn-link" %>
      <%= (link_to "Locate", facility_path(vehicle.facility), class: "btn btn-link bi bi-map") if vehicle.checked_in?%>
    </p>
  </div>
  </div>
  <% end %>
</div>
